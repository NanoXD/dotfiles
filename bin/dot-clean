#!/bin/bash
# Version .1 - remove .DS_Store files and ._* files

# ========================================================================== #
# Program Body                                                               #
# ========================================================================== #
echo "Removing .DS_Store files"
find /mnt/ -name .DS_Store -delete
echo "======================="
echo "Removing ._ files"
find /mnt/ -name ._* -exec rm '{}' \; -print
