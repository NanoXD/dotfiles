[user]
  name = Fernando Paredes
  email = nano@fdp.io
[push]
  default = simple
[color]
  branch = auto
  diff = auto
  status = auto
  ui = always
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  commit = green
  meta = yellow
  frag = cyan
  old = red
  new = green
  whitespace = red reverse
[alias]
  aa = add --all
  ai = add --interactive
  ap = add --patch
  br = branch -vv
  browse = "!hub browse"
  ca = commit --amend
  ci = commit -v
  cl = clone
  co = checkout
  create-branch = !sh -c 'git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  dc = diff --cached
  delete-merged-branches="git co master && git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
  delete-branch = !sh -c 'git push origin :refs/heads/$1 && git remote prune origin && git branch -D $1' -g
  f = "!git ls-files | grep -i"
  filelog = log -u
  issues = !hub browse -- issues
  merge-branch = !git checkout master && git merge @{-1} --ff-only
  pn = push --set-upstream origin master
  pr = !hub pull-request
  rebase-origin = !git fetch origin && git rebase origin/master
  reset-hard = reset --hard HEAD
  st = status -s
  timespan = "!f() { one=$(git log -n 1 --format=%ai $1); two=$(git log -n 1 --format=%ai ${2:-HEAD}); ddiff -f ${3:-%mm%dd} \"$one\" \"$two\"; }; f"
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

  tagage = !sh -c 'git for-each-ref --sort=taggerdate refs/tags --format=\"%(refname:short)\"'
  m = checkout master
  amend = commit --amend
  branch = branch -vv
  ls-ignored = ls-files --exclude-standard --ignored --others
  purge = !git branch -d $(git branch --merged master | grep -v -e '*' -e 'master')

[core]
  excludesfile = ~/.gitignore
  editor = nvim
  pager = diff-highlight | less -r
[credential]
  helper = osxkeychain
[rebase]
  autostash = true
[stash]
  showPatch = true
[submodule]
  fetchJobs = 0
[diff]
  compactionHeuristic = true
[interactive]
  diffFilter = diff-highlight
[pull]
  rebase = true
[include]
  path = ~/.gitconfig.local
