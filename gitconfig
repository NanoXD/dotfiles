[user]
	name = Fernando Paredes
	email = nano@fdp.io
[push]
  default = upstream
[color]
  ui = auto
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  commit = green
  meta = yellow
  frag = cyan
  old = red
  new = green
  whitespace = red reverse
[alias]
  a = add
  aa = add --all
  ai = add --interactive
  amend = commit --amend
  ap = add --patch
  branch = branch -vv
  branches = branch -a
  browse = "!hub browse"
  ca = commit --amend
  ci = commit --verbose
  cl = clone
  co = checkout
  create-branch = !sh -c 'git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  dc = diff --cached
  delete-branch = !sh -c 'git push origin :refs/heads/$1 && git remote prune origin && git branch -D $1' -g
  delete-merged-branches = !sh -c "git checkout master && git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d" -
  f = files
  filelog = log -u
  files = "!git ls-files | grep -i"
  fza = "!git ls-files -m -o --exclude-standard | fzf --print0 -m | xargs -0 -t -o git add"
  issues = !hub browse -- issues
  laf = fsck --lost-found
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  ls-ignored = ls-files --exclude-standard --ignored --others
  m = checkout master
  merge-branch = !git checkout master && git merge @{-1} --ff-only
  pf = push --force-with-lease
  pn = push --set-upstream origin master
  pr = !hub pull-request
  purge = !git branch -d $(git branch --merged master | grep -v -e '*' -e 'master')
  rebase-origin = !git fetch origin && git rebase origin/master
  releases = log --decorate --oneline --simplify-by-decoration --all
  reset-hard = reset --hard HEAD
  st = status --short --branch
  tagage = !sh -c 'git for-each-ref --sort=taggerdate refs/tags --format=\"%(refname:short)\"'
  timespan = "!f() { one=$(git log -n 1 --format=%ai $1); two=$(git log -n 1 --format=%ai ${2:-HEAD}); ddiff -f ${3:-%mm%dd} \"$one\" \"$two\"; }; f"
  undo = "!f() { \\\n    git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; \\\n}; f"
  unpushed = log --oneline HEAD..."@{u}"
  wip = rebase -i "@{u}"

[core]
  attributesfile = ~/.gitattributes
  excludesfile = ~/.gitignore
  editor = nvim
  pager = diff-highlight | less -r
  whitespace = fix
  untrackedCache = true
[credential]
  helper = osxkeychain
[rebase]
  autostash = true
[stash]
  showPatch = true
[submodule]
  fetchJobs = 0
[diff]
  compactionHeuristic = true
	indentHeuristic = true
	colorMoved = zebra
  algorithm = patience
  # Detect copies and renames
  renames = copies
[interactive]
  diffFilter = diff-highlight
[pull]
  rebase = true
[include]
  path = ~/.gitconfig.local
[rerere]
  enabled = true
  autoupdate = true
[apply]
  whitespace = nowarn
[commit]
  template = ~/.gitmessage
	gpgsign = true
	verbose = true
[diff "plist"]
  textconv = plutil -convert xml1 -o -
[diff "provision"]
  textconv = openssl smime -inform der -verify -in
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	required = true
	clean = git-lfs clean -- %f
[url "git@github.com:"]
	insteadOf = https://github.com/
